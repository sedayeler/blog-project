<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center">
                    <a class="navbar-brand fw-bold fs-4 me-3" asp-controller="Home" asp-action="Index">BLOG</a>
                    <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Ana Sayfa</a>
                </div>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                    <div class="d-flex">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <a class="btn me-2 btn-gonderi-yayinla" href="@Url.Action("Create", "Post")">Gönderi Yayınla</a>
                        }
                        else
                        {
                            <a class="btn me-2 btn-gonderi-yayinla" href="@Url.Action("Login", "User")">Gönderi Yayınla</a>
                        }

                        <a class="btn btn-kayit-ol me-2" asp-controller="User" asp-action="Register">Kayıt Ol</a>
                        <a class="btn btn-giris-yap" asp-controller="User" asp-action="Login">Giriş</a>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>


