@model List<BlogProject.WebUI.Models.Post.ListPostViewModel>

<h2 class="text-center my-4">Gönderiler</h2>

<style>
    .btn-purple {
        background-color: #6f42c1;
        border-color: #6f42c1;
        color: white;
        transition: background-color 0.3s ease;
    }

        .btn-purple:hover {
            background-color: #59359c;
            border-color: #59359c;
            color: white;
        }
</style>

<div class="row justify-content-center">
    @foreach (var post in Model)
    {
        <div class="col-md-6 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h4 class="card-title fw-bold">@post.Title</h4>
                    <p class="text-muted mb-1">
                        <small>
                            Yazar: @post.AuthorName |
                            Yayınlanma Tarihi: @post.CreatedAt.ToString("dd MMM yyyy") |
                            Kategori: @post.CategoryName
                        </small>
                    </p>
                    <p class="card-text">@post.Content</p>
                    <a href="@Url.Action("Details", "Post", new { id = post.Id })"
                       class="btn btn-purple">
                        Detaylar
                    </a>
                </div>
            </div>
        </div>
    }
</div>


