@model BlogProject.WebUI.Models.Post.UpdatePostViewModel
@{
    ViewData["Title"] = "Gönderiyi Düzenle";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm p-4">
                <h3 class="text-center mb-4 fw-bold">Gönderiyi Düzenle</h3>

                <form asp-action="Update" method="post">
                    <input type="hidden" asp-for="Id" />

                    <div class="mb-3">
                        <label asp-for="Title" class="form-label">Başlık</label>
                        <input asp-for="Title" class="form-control" placeholder="Başlık giriniz" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Content" class="form-label">İçerik</label>
                        <textarea asp-for="Content" class="form-control" rows="7" placeholder="İçeriği yazınız"></textarea>
                        <span asp-validation-for="Content" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ImagePath" class="form-label">Resim</label>
                        <input asp-for="ImagePath" class="form-control" placeholder="Resim dosya yolu (isteğe bağlı)" />
                        <span asp-validation-for="ImagePath" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="CategoryId" class="form-label">Kategori</label>
                        <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-select">
                            <option value="">Kategori seçiniz</option>
                        </select>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn w-100" style="background-color: #6f42c1; color: white;">
                        Güncelle
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

